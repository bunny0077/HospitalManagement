@model HospitalManagement.ViewModels.Users

<div class="modal fade" id="registerModal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="registerModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="registerModalLabel">User Registration</h5>
                <button type="button" class="close closeBtn" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="text-white">&times;</span>
                </button>
            </div>
            <div class="modal-body bg-light">
                <form id="userRegistrationForm">
                    @*<span id="headErrorReg"></span>*@
                    <div class="form-group">
                        <label for="uName" class="col-form-label">Name:</label>
                        @*<input type="text" class="form-control" id="uName" placeholder="Name">*@
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", id = "uName", placeholder = "Name", @autofocus = "autofocus" })
                        @Html.ValidationMessageFor(m => m.Name, "")
                        <span id="usrNameError"></span>
                    </div>
                    <div class="form-group">
                        <label for="userEmail" class="col-form-label">Email:</label>
                        @*<input type="text" class="form-control" id="userEmail" placeholder="name@example.com">*@
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "userEmail", placeholder = "name@example.com" })
                        @Html.ValidationMessageFor(m => m.Email, "")
                    </div>
                    <div class="form-group">
                        <label for="uPassword" class="col-form-label">Password:</label>
                        @*<input type="password" class="form-control" id="uPassword" placeholder="Password">*@
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", id = "uPassword", placeholder = "Password" })
                        @Html.ValidationMessageFor(m => m.Password, "")
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" id="userRegisterBtn">Submit</button>
                        <button type="button" class="btn btn-secondary closeBtn" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
